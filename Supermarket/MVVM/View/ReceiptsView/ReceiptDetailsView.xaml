<Window x:Class="Supermarket.MVVM.View.ReceiptsView.ReceiptDetailsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Supermarket.MVVM.View.ReceiptsView"
        mc:Ignorable="d"
        Title="ReceiptDetailsView" Height="450" Width="800">
    <Grid>
        <DataGrid>
            <DataGrid  
                ColumnWidth="*" ItemsSource="{Binding SelectedReceiptProducts}" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=Name}" />
                    <DataGridTextColumn Binding="{Binding Path=Quantity}" />
                    <DataGridTextColumn Binding="{Binding Path=Price}" />
                </DataGrid.Columns>
            </DataGrid>
        </DataGrid>

    </Grid>
</Window>
